{
  "compilerOptions": {
    "types": [
      "vite/client",
    ],
    "target": "es5",
    "lib": [
      "DOM",
      "ESNext",
      "DOM.Iterable"
    ],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": false,
  },
  "include": [
    "src",
    "src-tauri/**.ts"
, "src-tauri/api/tree.ts"  ],
  "exclude": [
    "core/**"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}